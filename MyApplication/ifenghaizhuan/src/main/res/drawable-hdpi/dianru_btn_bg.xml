<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <corners android:radius="5dp" />

            <gradient android:angle="90.0" android:centerColor="#ffbbbbbb" android:endColor="#ffdddddd" android:startColor="#ffdddddd" />

            <stroke android:width="1dp" android:color="#FFAAAAAA" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="5dp" />

            <gradient android:angle="90.0" android:centerColor="#ffffffff" android:endColor="#ffffffff" android:startColor="#ffffffff" />

            <stroke android:width="1dp" android:color="#CCCCCC" />
        </shape>
    </item>

</selector>